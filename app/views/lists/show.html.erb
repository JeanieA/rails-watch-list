<h3><strong><%= @list.name %></strong></h3>

<% @list.movies.each do |movie| %>
  <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
  <h3><%= movie.title %></h3>
  <p><%= movie.overview %></p>
  <P>Rating: <%= movie.rating %></P>
  <p><em>Comment: <%= bookmark.comment %></em></p>
  <%= link_to "delete", bookmark_path(bookmark), method: :delete %>
<% end %>

<br>
<%= link_to "add a movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
<%= link_to "Back to Homepage", root_path, class: "btn btn-success" %>
<%= link_to "Delete this list", list_path(@list), method: :delete, class: "btn btn-danger" %>


